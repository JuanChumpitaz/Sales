<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Sales.Helpers"
             x:Class="Sales.Views.AddProductPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="{i18n:Translate AddProduct}">
    
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding AddProduct}"
            Padding="5">
            <Label 
                Text="{i18n:Translate Description}">
            </Label>
            <Entry
                Placeholder="{i18n:Translate DescriptionPlaceholder}">
            </Entry>
            <Label
                Text="{i18n:Translate Remark}">
            </Label>
            <Entry
                Placeholder="{i18n:Translate RemarkPlaceholder}">
            </Entry>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>