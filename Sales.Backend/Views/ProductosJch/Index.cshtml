@model IEnumerable<Sales.Common.Models.TBM_PRODU_JCH>

@{
    ViewBag.Title = "Index";
}

<h2>Products JCH</h2>

<p>
    @Html.ActionLink("Create New", "Create" , new { },new {@class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DES_PRODU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.COD_USUAR_CREAC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FEC_USUAR_CREAC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.COD_USUAR_MODIF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FEC_USUAR_MODIF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DES_PRODU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.ImagePath))
            {
                <img src="@Url.Content(item.ImagePath)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COD_USUAR_CREAC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FEC_USUAR_CREAC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.COD_USUAR_MODIF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FEC_USUAR_MODIF)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.COD_PRODU },new { @class= "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.COD_PRODU },new {@class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.COD_PRODU }, new { @class= "btn btn-danger"})
        </td>
    </tr>
}

</table>
